<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:background="@android:color/holo_purple">

    <TextView
        android:id="@+id/bottom_sheet_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bar Name"
        android:layout_marginTop="12dp"
        android:layout_marginStart="35dp"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_hearing_black_24dp"
        android:id="@+id/imageView"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/bottom_sheet_bar_name"
        android:layout_alignStart="@+id/bottom_sheet_bar_name"
        android:layout_marginStart="15dp" />

    <TextView
        android:text="Peu bruyant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:id="@+id/bottom_sheet_noise"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignTop="@+id/imageView" />

    <RatingBar
        android:rating="3.5"
        android:stepSize="0.5"
        android:numStars="5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:gravity="center_vertical"
        android:isIndicator="false"
        android:layout_alignBottom="@+id/bottom_sheet_bar_name"
        android:layout_toEndOf="@+id/bottom_sheet_noise"
        android:layout_alignTop="@+id/bottom_sheet_bar_name" />

</RelativeLayout>