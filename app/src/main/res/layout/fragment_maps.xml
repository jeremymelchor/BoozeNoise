<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_maps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/getBars"
            android:text="get Bars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/maps"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:background="@color/cast_libraries_material_featurehighlight_text_header_color"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:background="@android:color/holo_purple">

            <TextView
                android:id="@+id/bottom_sheet_bar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bar Name"
                android:layout_marginTop="12dp"
                android:layout_marginStart="35dp"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_hearing_black_24dp"
                android:id="@+id/imageView"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/bottom_sheet_bar_name"
                android:layout_alignStart="@+id/bottom_sheet_bar_name"
                android:layout_marginStart="15dp" />

            <TextView
                android:text="Peu bruyant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:id="@+id/bottom_sheet_noise"
                android:gravity="center_vertical"
                android:layout_alignBottom="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:layout_alignTop="@+id/imageView" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:fabSize="normal"
                android:src="@drawable/ic_itinerary"
                android:layout_marginEnd="36dp"
                android:id="@+id/floatingActionButton5"
                android:layout_alignBottom="@+id/bottom_sheet_bar_name"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="14dp" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>